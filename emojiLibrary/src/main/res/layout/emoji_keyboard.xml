<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#bfbfbf" />

    <com.mzywx.util.emoji.ui.CustomViewPager
        android:id="@+id/parent_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="#fff0f0f0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#bfbfbf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff0f0f0"
        android:orientation="horizontal" >

        <com.rockerhieu.emojicon.custom.ui.PagerSlidingTabStrip
            android:id="@+id/tabs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            app:pstsIndicatorColor="#bfbfbf"
            app:pstsIndicatorHeight="2dp"
            app:pstsShouldExpand="true"
            app:pstsTabPaddingLeftRight="2dp" />

        <ImageButton
            android:id="@+id/back_space"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:background="@drawable/background_tab"
            android:contentDescription="back_space"
            android:src="@drawable/selector_sym_keyboard_delete_holo" />
    </LinearLayout>

</LinearLayout>